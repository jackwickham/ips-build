{
  "name": "ips-plugin-build",
  "version": "1.0.1",
  "private": true,
  "description": "Github action for building IPS plugins",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "test-debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jackwickham/ips-plugin-build.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Jack Wickham",
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^4.0.0",
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/glob": "^0.5.0",
    "lodash": "^4.17.21",
    "xml": "^1.0.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.10.1",
    "@types/xml": "^1.0.11",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.39.1",
    "eslint-plugin-jest": "^29.2.0",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  }
}