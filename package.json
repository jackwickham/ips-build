{
  "name": "ips-plugin-build",
  "version": "1.0.0",
  "private": true,
  "description": "Github action for building IPS plugins",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "test-debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Jack Wickham",
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^0.3.2",
    "@actions/core": "^1.2.0",
    "@actions/exec": "^1.0.4",
    "@actions/glob": "^0.1.0",
    "@types/lodash": "^4.14.157",
    "@types/xml": "^1.0.5",
    "lodash": "^4.17.19",
    "xml": "^1.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "@types/node": "^12.7.12",
    "@typescript-eslint/parser": "^3.6.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^22.21.0",
    "jest": "^26.1.0",
    "jest-circus": "^26.1.0",
    "js-yaml": "^3.13.1",
    "prettier": "^1.19.1",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.6"
  }
}
